<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.ophthalmologyapplication.TimerDisplayActivity"
    android:focusable="false"
    android:background="#ff29fffa"
    android:gravity="bottom">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/curentTaskNameOutput"
        android:gravity="center|center_horizontal"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_weight="1"
        android:text="test" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/mainHour"
            android:layout_weight="3"
            android:textStyle="normal"
            android:text="00"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=":"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="40sp"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="00"
            android:id="@+id/mainMinute"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=":"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="40dp"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="00"
            android:id="@+id/mainSecond"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textAlarmTextView"
        android:layout_weight="5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Next:"
                android:id="@+id/textView4"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/nextTaskNameOutput"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/nextHour"
            android:text="0"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=":"
            android:id="@+id/textView11"
            android:layout_gravity="center"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/nextMinute"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=":"
            android:id="@+id/textView12"
            android:layout_gravity="center"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/nextSecond"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_weight=".2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/startStopButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:onClick="startStop"
                android:text="Start/Stop"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Skip "
                android:id="@+id/button4"
                android:onClick="skip"
                android:layout_below="@+id/nextTaskNameOutput"
                android:layout_toEndOf="@+id/startStopButton"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="To Step..."
                android:id="@+id/button"
                android:layout_alignBottom="@+id/button4"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/button4"
                android:onClick="menuButtonClick"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

</LinearLayout>


